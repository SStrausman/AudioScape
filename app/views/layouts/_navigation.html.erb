<% if user_signed_in? %>
<ul class="button-group even-3">
  <li><%= link_to 'Home', root_path, :class=>"button" %></li>
  <li><%= link_to 'Account', edit_user_registration_path, :class=>"button" %></li>
  <li><%= link_to 'Signout', destroy_user_session_path, :method=>'delete', :class=>"button" %></li>
</ul>
<% else %>
<ul class="button-group even-3">
  <li><%= link_to 'Home', root_path, :class => 'button' %></li>
  <li><%= link_to 'Signin', new_user_session_path, :class => 'button' %></li>
  <li><%= link_to 'Signup', new_user_registration_path, :class => 'button' %></li>
</ul>
<% end %>
